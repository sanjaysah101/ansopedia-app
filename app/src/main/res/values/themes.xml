<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ansopedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Ansopedia.Starting" parent="Theme.SplashScreen">
        <!-- The background color-->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- The logo-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_ansopedia__216_x_216_px_</item>
        <!-- The Duration-->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- The original theme after splash screen ends-->
        <item name="postSplashScreenTheme">@style/Theme.Ansopedia</item>
    </style>
    <style name="Button1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:drawableTint">@color/white</item>-->
        <item name="android:height">60dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>